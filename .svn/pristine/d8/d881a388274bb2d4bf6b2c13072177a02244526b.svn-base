.fixed-table-container{
	border:none;
}

.fixed-table-container .fixed-table-pagination .pagination ul.pagination li a{
	border: none;
	border-radius: 50%;
}

.fixed-table-container .fixed-table-pagination .pagination ul.pagination li a:hover{
	background-color: rgba(158, 158, 158, .2) !important;
}

.fixed-table-container .fixed-table-pagination .pagination ul.pagination li a:active{
	background-color: rgba(158, 158, 158, .4) !important;
}

.fixed-table-toolbar .btn-group button.dropdown-toggle{
	background-color: #FFF;
    border: none;
	box-shadow: none;
}

.fixed-table-toolbar .btn-group button.dropdown-toggle:HOVER{
	background-color: rgba(158, 158, 158, .2);
}

.fixed-table-toolbar .btn-group button.dropdown-toggle:ACTIVE{
	background-color: rgba(158, 158, 158, .4);
}

.caretSelects{
	display: block;
}
